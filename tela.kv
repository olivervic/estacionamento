ScreenManager:
    LoginScreen:
    MenuScreen:

<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Login"
            font_size: 32
            size_hint_y: None
            height: 50

        TextInput:
            id: nome
            hint_text: "Usuário"
            multiline: False
            size_hint_y: None
            height: 50

        TextInput:
            id: senha
            hint_text: "Senha"
            password: True
            multiline: False
            size_hint_y: None
            height: 50

        Button:
            text: "Entrar"
            size_hint_y: None
            height: 50
            on_release:
                app.logar(nome.text, senha.text)

<MenuScreen>:
    name: "menu"
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 50
            orientation: "horizontal"
            canvas.before:
                Color:
                    rgba: 0.2, 0.6, 0.8, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Vaga"
                bold: True
            Label:
                text: "Carro"
                bold: True
            Label:
                text: "Placa"
                bold: True
            Label:
                text: "Responsável"
                bold: True
            Label:
                text: "Entrada"
                bold: True
            Label:
                text: "Saída"
                bold: True
            Label:
                text: "Dia"
                bold: True
            Label:
                text: "Status"
                bold: True

        ScrollView:
            GridLayout:
                id: main_box
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 40
                row_force_default: True

        Button:
            text: "Sair"
            size_hint_y: None
            height: 50
            on_release:
                app.logout()
